        /// <summary>
        /// 根节点格式为: (TD1)XXX
        /// 非根节点格式为: (TR1)XXX
        /// </summary>
        static string GetSerialDisplayString(Row r)
        {
            object sign;
            if(r.Node.Level == 0)
                sign = string.Format(RootFormat, r["测试依据标识"]);
            else
                sign = string.Format(NonRootFormat, r["章节号"]);
            return "(" + sign + ")" + r["测试依据"];
        }

