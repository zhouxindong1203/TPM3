        static void OnCreateFormReadyEventHandler(Form f)
        {
            MultiColumnDropDown f2 = f as MultiColumnDropDown;
            C1FlexGrid flex = f2.flex1;
            flex.OwnerDrawCell += dropDownflex_OwnerDrawCell;

